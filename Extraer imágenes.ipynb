   "source": [
    "\n",
    "#### importamos librerías\n",
    "\n",
    "import requests\n",
    "import pandas as pd\n",
    "\n",
    "API_KEY =  \"PONER EL API KEY\""
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "35392aca-c6cf-4366-9a01-c913a7968b8d",
   "metadata": {},
   "outputs": [],
   "source": [
    "#ESTA ES UNA FUNCIÓN PARA DESCARGAR UNA IMAGEN POR CADA UNO DE LOS PUNTOS QUE TENEMOS EN LA BASE DE DATOS GENERADA EN R\n",
    "# ES NECESARIO CREAR UNA CARPETA QUE SE LLAME IMAGENES EN LA QUE SE ALMACENARÁN LAS FOTOS DESCARGADAS \n",
    "\n",
    "def descargar_imagen(lat, lon, nombre):\n",
    "    url = f\"https://maps.googleapis.com/maps/api/streetview?size=640x640&location={lat},{lon}&key={API_KEY}\"\n",
    "    r = requests.get(url)\n",
    "    with open(f\"imagenes/{nombre}.jpg\", \"wb\") as f:\n",
    "        f.write(r.content)\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "2ecaaa4e-4a3e-4eeb-a20c-932eb282388b",
   "metadata": {},
   "outputs": [],
   "source": [
    "### LEEMOS LAS BASE DE DATOS QUE GENERAMOS EN R\n",
    "\n",
    "df = pd.read_csv(\"puntos_cuauhtemoc.csv\")\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "2394726f-be21-48b2-8e28-b60946e11276",
   "metadata": {},
   "outputs": [],
   "source": [
    "\n",
    "# DESCARGAR UNA IMAGEN POR CADA PUNTO\n",
    "\n",
    "for i, row in df.iterrows():\n",
    "    descargar_imagen(row[\"lat\"], row[\"lon\"], i)"
   ]
  }
